CONTENT_PORT=3950
# Naver Open API (optional — Reddit works without any keys)
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Twitter(X) API v2 (optional)
TWITTER_BEARER_TOKEN=
TWITTER_MAX_RESULTS=20

# YouTube Data API v3 (optional)
YOUTUBE_API_KEY=
YOUTUBE_MAX_RESULTS=12

# Optional override (comma-separated RSS URLs)
RSS_FEEDS=

# Cron snapshot refresh (default: every 4 hours, Asia/Seoul)
CRON_ENABLED=true
CRON_SCHEDULE=0 */4 * * *
CRON_TZ=Asia/Seoul

# LLM Idea Generator (optional — Gemini)
GEMINI_API_KEY=
